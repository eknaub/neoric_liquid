{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

<h1>{{ 'cart.title' | t }}</h1>

<form class='cart' action='{{ routes.cart_url }}' method='post'>
  <table style='width: 100%;'>
    {% for item in cart.items %}
      <tr class='cart-item'>
        <td>
          <img
            src='{{ item.image | image_url: width: 150, height: 150, crop: 'center' }}'
            alt='{{ item.image.alt | escape }}'
            width='150'
            height='150'
            loading='lazy'
          >
        </td>
        <td class='cart-item-description'>
          <p class='bold-text'>{{ item.product.title }}</p>
          <p class='bold-text'>{{ item.product.description }}</p>
          <p>{{ item.price | money }}</p>
        </td>
        <td class='cart-item-actions'>
          <input class='update-quantitiy-input' type='number' name='updates[]' value='{{ item.quantity }}'>
          <input class='update-quantitiy' type='submit' value='{{ 'cart.update' | t }}'>
          <a href='{{ item.url_to_remove }}'>
            <svg id='Layer_1' data-name='Layer 1' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 105.16 122.88'>
              <defs><style>.cls-1{fill-rule:evenodd;}</style></defs><title>delete</title><path class="cls-1" d="M11.17,37.16H94.65a8.4,8.4,0,0,1,2,.16,5.93,5.93,0,0,1,2.88,1.56,5.43,5.43,0,0,1,1.64,3.34,7.65,7.65,0,0,1-.06,1.44L94,117.31v0l0,.13,0,.28v0a7.06,7.06,0,0,1-.2.9v0l0,.06v0a5.89,5.89,0,0,1-5.47,4.07H17.32a6.17,6.17,0,0,1-1.25-.19,6.17,6.17,0,0,1-1.16-.48h0a6.18,6.18,0,0,1-3.08-4.88l-7-73.49a7.69,7.69,0,0,1-.06-1.66,5.37,5.37,0,0,1,1.63-3.29,6,6,0,0,1,3-1.58,8.94,8.94,0,0,1,1.79-.13ZM5.65,8.8H37.12V6h0a2.44,2.44,0,0,1,0-.27,6,6,0,0,1,1.76-4h0A6,6,0,0,1,43.09,0H62.46l.3,0a6,6,0,0,1,5.7,6V6h0V8.8h32l.39,0a4.7,4.7,0,0,1,4.31,4.43c0,.18,0,.32,0,.5v9.86a2.59,2.59,0,0,1-2.59,2.59H2.59A2.59,2.59,0,0,1,0,23.62V13.53H0a1.56,1.56,0,0,1,0-.31v0A4.72,4.72,0,0,1,3.88,8.88,10.4,10.4,0,0,1,5.65,8.8Zm42.1,52.7a4.77,4.77,0,0,1,9.49,0v37a4.77,4.77,0,0,1-9.49,0v-37Zm23.73-.2a4.58,4.58,0,0,1,5-4.06,4.47,4.47,0,0,1,4.51,4.46l-2,37a4.57,4.57,0,0,1-5,4.06,4.47,4.47,0,0,1-4.51-4.46l2-37ZM25,61.7a4.46,4.46,0,0,1,4.5-4.46,4.58,4.58,0,0,1,5,4.06l2,37a4.47,4.47,0,0,1-4.51,4.46,4.57,4.57,0,0,1-5-4.06l-2-37Z"/>
            </svg>
          </a>
        </td>
        <td>
          <p class='bold-text'>{{ item.line_price | money }}</p>
        </td>
      </tr>
    {% endfor %}
  </table>
  <p class='bold-text'>{{ 'cart.total' | t }}: {{ cart.total_price | money }}</p>
  <div>
    <input type='submit' class='checkout' name='checkout' value='{{ 'cart.checkout' | t }}'>
  </div>
</form>

{% stylesheet %}
  .bold-text {
    font-weight: bold;
  }
  .cart {
    display: grid;
    gap: 20px;
    justify-items: end;
  }
  .cart-item {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 8px;
    background-color: #f9f9f9;
    @media (max-width: 768px) {
      flex-direction: column;
      align-items: flex-start;
    }
  }
  .cart-item-actions {
    display: flex;
    flex-direction: row;
    gap: 10px;
  }
  .cart-item-description {
    flex-grow: 1;
  }
  .update-quantitiy-input {
    width: 50px;
    padding: 5px;
  }
  .update-quantitiy {
    background: #ffffff 0% 0% no-repeat padding-box;
    border: 1px solid #1f47ff;
    border-radius: 3px;
    color: #1f47ff;
    font: normal normal 600 14px/17px Montserrat;
    letter-spacing: 0px;
    cursor: pointer;
    padding: 10px 20px;
  }
  .checkout {
    background: #1f47ff 0% 0% no-repeat padding-box;
    border: none;
    border-radius: 3px;
    color: white;
    font: normal normal 600 18px/22px Montserrat;
    letter-spacing: 0px;
    cursor: pointer;
    min-width: 200px;
    height: 52px;
  }
{% endstylesheet %}

