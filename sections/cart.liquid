{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

<h1>{{ 'cart.title' | t }}</h1>

<form class='cart' action='{{ routes.cart_url }}' method='post'>
  <table style='width: 100%;'>
    {% for item in cart.items %}
      <tr class='cart-item'>
        <td>
          <img
            src='{{ item.image | image_url: width: 150, height: 150, crop: 'center' }}'
            alt='{{ item.image.alt | escape }}'
            width='150'
            height='150'
            loading='lazy'
          >
        </td>
        <td class='cart-item-description'>
          <p class='bold-text'>{{ item.product.title }}</p>
          <p class='bold-text'>{{ item.product.description }}</p>
          <p>{{ item.price | money }}</p>
        </td>
        <td class='cart-item-actions'>
          <input class='update-quantitiy-input' type='number' name='updates[]' value='{{ item.quantity }}'>
          <input class='update-quantitiy' type='submit' value='{{ 'cart.update' | t }}'
          ><a href='{{ item.url_to_remove }}'>
            <svg
              fill='#000000'
              height='15px'
              width='15px'
              version='1.1'
              id='Capa_1'
              xmlns='http://www.w3.org/2000/svg'
              xmlns:xlink='http://www.w3.org/1999/xlink'
              viewBox='0 0 460.775 460.775'
              xml:space='preserve'
            >
              <path d="M285.08,230.397L456.218,59.27c6.076-6.077,6.076-15.911,0-21.986L423.511,4.565c-2.913-2.911-6.866-4.55-10.992-4.55
              	c-4.127,0-8.08,1.639-10.993,4.55l-171.138,171.14L59.25,4.565c-2.913-2.911-6.866-4.55-10.993-4.55
              	c-4.126,0-8.08,1.639-10.992,4.55L4.558,37.284c-6.077,6.075-6.077,15.909,0,21.986l171.138,171.128L4.575,401.505
              	c-6.074,6.077-6.074,15.911,0,21.986l32.709,32.719c2.911,2.911,6.865,4.55,10.992,4.55c4.127,0,8.08-1.639,10.994-4.55
              	l171.117-171.12l171.118,171.12c2.913,2.911,6.866,4.55,10.993,4.55c4.128,0,8.081-1.639,10.992-4.55l32.709-32.719
              	c6.074-6.075,6.074-15.909,0-21.986L285.08,230.397z"/>
            </svg>
          </a>
        </td>
        <td>
          <p class='bold-text'>{{ item.line_price | money }}</p>
        </td>
      </tr>
    {% endfor %}
  </table>
  <p class='bold-text'>{{ 'cart.total' | t }}: {{ cart.total_price | money }}</p>
  <div>
    <input type='submit' class='checkout' name='checkout' value='{{ 'cart.checkout' | t }}'>
  </div>
</form>

{% stylesheet %}
  .bold-text {
    font-weight: bold;
  }
  .cart {
    display: grid;
    gap: 20px;
    justify-items: end;
  }
  .cart-item {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 8px;
    background-color: #f9f9f9;
    @media (max-width: 768px) {
      flex-direction: column;
      align-items: flex-start;
    }
  }
  .cart-item-actions {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
  }
  .cart-item-description {
    flex-grow: 1;
  }
  .update-quantitiy-input {
    width: 50px;
    padding: 5px;
  }
  .update-quantitiy {
    background: #ffffff 0% 0% no-repeat padding-box;
    border: 1px solid #1f47ff;
    border-radius: 3px;
    color: #1f47ff;
    font: normal normal 600 14px/17px Montserrat;
    letter-spacing: 0px;
    cursor: pointer;
    padding: 10px 20px;
  }
  .checkout {
    background: #1f47ff 0% 0% no-repeat padding-box;
    border: none;
    border-radius: 3px;
    color: white;
    font: normal normal 600 18px/22px Montserrat;
    letter-spacing: 0px;
    cursor: pointer;
    min-width: 200px;
    height: 52px;
  }
{% endstylesheet %}

